rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has an admin entry
    function hasAdminEntry() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Helper function to get admin data
    function getAdminData() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data;
    }

    // Helper function to check if an admin's access is not expired
    function isNotExpired() {
      let adminData = getAdminData();
      // If expiresAt doesn't exist, they are a permanent admin (like the superadmin)
      return !('expiresAt' in adminData) || (request.time < timestamp.value(adminData.expiresAt));
    }
    
    // Check if the user is an admin or superadmin with valid access
    function isAdmin() {
      return hasAdminEntry() && isNotExpired();
    }
    
    // Check if the user is specifically a superadmin
    function isSuperAdmin() {
      return isAdmin() && getAdminData().role == 'superadmin';
    }

    // Products: Public can read, Admins can write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Site settings: Public can read, Admins can write
    match /site/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: Users can manage their own, Admins can manage all
    match /orders/{orderId} {
      allow read, update: if request.auth.uid == resource.data.userId || isAdmin();
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    // Admins Collection: Authenticated users can read to verify their own status.
    // SuperAdmins can create/delete other admin documents.
    match /admins/{userId} {
      allow read: if request.auth != null;
      allow create, delete: if isSuperAdmin();
    }
  }
}
