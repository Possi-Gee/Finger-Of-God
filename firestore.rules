rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin(request) {
      // List of authorized admin emails
      let adminEmails = ["temahfingerofgod@gmail.com"];
      return request.auth.token.email_verified && request.auth.token.email in adminEmails;
    }
    
    // Products can be read by anyone, but only written by admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin(request);
    }
    
    // Orders collection
    match /orders/{orderId} {
    
      // Allow users to create their own orders.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow authenticated users to perform list and read operations.
      // The actual documents they can see are restricted by the query in the app's code.
      allow list, read: if request.auth != null;
      
      // Allow users to update their own orders, and admins to update any order.
      allow update: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin(request);
      
      // Only admins can delete orders.
      allow delete: if isAdmin(request);
    }
  }
}
