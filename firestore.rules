rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /orders/{orderId} {
      // Allow any authenticated user to create, read, list, and update orders.
      // For a production app, you would restrict read/write access to the specific user
      // and admins.
      allow read, write, list, create, update: if request.auth != null;
    }
  }
}
