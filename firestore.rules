
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuth() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isSuperAdmin() {
      // The initial superadmin might not have a doc, so we also check the email claim.
      return isAuth() && 
        (request.auth.token.email == "temahfingerofgod@gmail.com" || 
         (isAdmin() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'superadmin'));
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Publicly readable collections
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /site/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User-specific collections
    match /orders/{orderId} {
      allow read, update: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isOwner(request.resource.data.userId);
    }
    
    // Admin-only collections
    match /admins/{userId} {
      // Only superadmins should be able to view the list of other admins.
      allow list, read: if isSuperAdmin();
      // This is now a manual process in the console, so we don't need app-based rules for write.
      allow create, update, delete: if false; 
    }
  }
}
