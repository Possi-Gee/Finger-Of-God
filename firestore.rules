rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /orders/{orderId} {
      // Allow any authenticated user to create, read (get, list), and update orders.
      // For a production app, you would tighten these rules to distinguish between
      // regular users (who can only read their own orders) and admins.
      allow create, get, list, update: if request.auth != null;
    }
  }
}
